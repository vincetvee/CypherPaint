<Window x:Class="DiagramDesigner.ProjectName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiagramDesigner"
        mc:Ignorable="d"
        Title="ProjectName" Height="250" Width="300">
    <Grid>
        <Label x:Name="Name" Background="Gray" Margin="279,198,435,199"/>
       
        <Border
            MinWidth="250"
            Background="Orange" 
            BorderBrush="Black" 
            BorderThickness="1" 
            CornerRadius="5" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Margin="5" Text="Project Name:" FontWeight="Bold" FontFamily="Cambria" />
                <TextBox x:Name="Projectname"  MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="Saveprojecname" Margin="5" Content="OK" IsDefault="True" Click="Apply"  />
                    </StackPanel>
            </StackPanel>
        </Border>
       
    </Grid>
</Window>
